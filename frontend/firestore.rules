rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isManager() {
      return isAuthenticated() && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'manager' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }
    
    function isBiller() {
      return isAuthenticated() && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'biller' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'manager' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }
    
    function isCollector() {
      return isAuthenticated() && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'collector' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'manager' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }

    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow create: if isAuthenticated() && isAdmin();
      allow update: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow delete: if isAuthenticated() && isAdmin();
    }

    // Invoices collection
    match /invoices/{invoiceId} {
      allow read: if isAuthenticated() && (isBiller() || isCollector());
      allow create: if isAuthenticated() && isBiller();
      allow update: if isAuthenticated() && isBiller();
      allow delete: if isAuthenticated() && isAdmin();
    }

    // Payments collection
    match /payments/{paymentId} {
      allow read: if isAuthenticated() && (isBiller() || isCollector());
      allow create: if isAuthenticated() && isCollector();
      allow update: if isAuthenticated() && isCollector();
      allow delete: if isAuthenticated() && isAdmin();
    }

    // Reports collection
    match /reports/{reportId} {
      allow read: if isAuthenticated() && (isManager() || isAdmin());
      allow create: if isAuthenticated() && isManager();
      allow update: if isAuthenticated() && isManager();
      allow delete: if isAuthenticated() && isAdmin();
    }
  }
} 
